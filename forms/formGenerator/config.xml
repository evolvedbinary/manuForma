        <subform xpath="/tei:TEI/descendant::tei:msDesc/tei:physDesc" formName="handDesc" formLabel="Physical description: script/hand description" repeat="no">
            <localSchema src="../schemas/mss-hand.xml"/>
            <globalSchema src="../schemas/mss-compiled.odd"/>
            <xmlTemplate src="../templates/full-mss-template.xml"/>
            <formDesc>Describe the scribal hands of the manuscript. If there are multiple hands, use separate description containers.</formDesc>
            <elementGroups>
                <group groupLabel="Summary of script." groupNo="1">
                    <element xpath="tei:handDesc/tei:summary"/>
                </group>
                <group groupLabel="Script definition." groupNo="2"  repeatable="yes">
                    <element xpath="tei:scriptDesc/tei:scriptNote"/>
                </group>
                <group groupLabel="Scribal hand(s)." groupNo="3"  repeatable="yes">
                    <element xpath="tei:handDesc/tei:handNote"/>
                </group>
            </elementGroups>
        </subform>
