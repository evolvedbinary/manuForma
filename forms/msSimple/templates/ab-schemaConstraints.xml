<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <ab ident="ab"
       elementName="ab"
       elementLabel="Choose the type of manuscript"
       minOccur="0"
       maxOccur="100"
       path="/*:ab"
       currentLevel="1"
       popup="1"
       teiElement="&lt;ab/&gt;">
      <desc>Contains descriptions of the manuscript's physical components. Use the "form"
                            attribute to indicate if the manuscript was created as a single unit, a composite, or a multiple text manuscript.</desc>
      <availableAtts elementName="ab">
         <attDef ident="rend" attLabel="Format">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Format</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="square"> </valItem>
               <valItem mode="add" ident="horizontalRectangle"> </valItem>
               <valItem mode="add" ident="verticalRectangle"> </valItem>
               <valItem mode="add" ident="safina"> </valItem>
               <valItem mode="add" ident="irregular"> </valItem>
               <valItem mode="add" ident="other"> </valItem>
            </valList>
         </attDef>
         <attDef ident="style" attLabel="Book form">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Book form</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="codex"> </valItem>
               <valItem mode="add" ident="scroll"> </valItem>
               <valItem mode="add" ident="uncertain"> </valItem>
            </valList>
         </attDef>
         <attDef ident="subtype" attLabel="Type of manuscript">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Type of manuscript</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="single">
                  <desc xml:lang="en">Single manuscript: a volume consisting of one codicological unit and containing only one
                                            text</desc>
               </valItem>
               <valItem mode="add" ident="composite">
                  <desc xml:lang="en">Composite manuscript: a volume assembled from initially separate codicological units or
                                            booklets</desc>
               </valItem>
               <valItem mode="add" ident="multiple">
                  <desc xml:lang="en">Multiple text manuscript: a volume consisting of one codicological unit with several texts
                                            worked in a single operation by one or several scribes</desc>
               </valItem>
            </valList>
         </attDef>
         <attDef ident="type" attLabel="type">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="codicologicalDefinition"> </valItem>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child/>
      </childElements>
   </ab>
</TEI>
