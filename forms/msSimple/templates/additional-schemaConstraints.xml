<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <listBibl ident="listBibl"
             elementName="listBibl"
             elementLabel="citation list"
             path="/*:listBibl"
             currentLevel="1"
             popup="1"
             teiElement="&lt;listBibl/&gt;">
      <desc>A list of bibliographic items.</desc>
      <availableAtts elementName="listBibl">
         <attDef ident="type" attLabel="type">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="">
               <valItem ident="catalogue"
                        attLabel="catalogue"
                        desc="Descriptions in manuscript catalogues of the subject of&#xA;                                        the record. This only makes sense if you are editing a manuscript record. "/>
               <valItem ident="editions"
                        attLabel="editions"
                        desc="Editions of the Textual Unit (Work). This only makes sense if you are editing a Textual Unit."/>
               <valItem ident="text"
                        attLabel="text"
                        desc="Bibliography about the Textual Unit (Work), which is not an edition. This could also find its place in secondary bibliography."/>
               <valItem ident="otherLanguages"
                        attLabel="otherLanguages"
                        desc="About the same textual unit in a different literary tradition."/>
               <valItem ident="clavis"
                        attLabel="clavis"
                        desc="ID of the work in other clavis (CC, CPG etc.) "/>
               <valItem ident="translation"
                        attLabel="translation"
                        desc="Modern translations of the work "/>
               <valItem ident="secondary"
                        attLabel="secondary"
                        desc="Secondary bibliography on the subject of the record. "/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="bibl"
                     label="Bibliographic reference"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </listBibl>
   <bibl ident="bibl"
         elementName="bibl"
         elementLabel="Bibliographic reference"
         path="/*:listBibl/*:bibl"
         currentLevel="2"
         popup="2"
         teiElement="&lt;bibl/&gt;">
      <lookup xmlns="http://www.w3.org/1999/xhtml"
              api="/exist/apps/majlis/api/search/citation?format=xml&amp;q="
              formURL="form.xq?form=forms/msSimple/lookup/bibl.xhtml"
              elementName="bibl"
              formName="bibl"
              lookupLabel="Look up bibliographic record"/>
      <desc>Add a bibliographic item, like a monograph, journal article, or manuscript.</desc>
      <availableAtts elementName="bibl">
         <attDef ident="type" attLabel="type">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="semi"
                     mode="replace">
               <valItem ident="MS" attLabel="MS" desc="The reference is to a manuscript"/>
               <valItem ident="QUARTO"
                        attLabel="QUARTO"
                        desc="The reference is to the Bodleian Quarto&#xA;                                        Catalogues"/>
               <valItem ident="SC"
                        attLabel="SC"
                        desc="The reference is to the Bodleian Summary&#xA;                                        Catalogue"/>
               <valItem ident="OC"
                        attLabel="OC"
                        desc="The reference is to the Bodleian Old Catalogue"/>
               <valItem ident="bible" attLabel="bible" desc="The reference is to the bible"/>
               <valItem ident="commentary"
                        attLabel="commentary"
                        desc="The reference is to a commentary"/>
               <valItem ident="edition"
                        attLabel="edition"
                        desc="The reference is to an edition"/>
               <valItem ident="extract"
                        attLabel="extract"
                        desc="The reference is to an extract"/>
               <valItem ident="related"
                        attLabel="related"
                        desc="The reference is to a related item"/>
               <valItem ident="text-relations"
                        attLabel="text-relations"
                        desc="The reference is to a textually-related item"/>
               <valItem ident="translation"
                        attLabel="translation"
                        desc="The reference is to a translation"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="title"
                     label="Title of publication"
                     minOccurs="1"
                     maxOccurs="1"
                     errorMessage="&#xA;                                        Element must occur at least 1 time(s) and no more than 1 time(s).&#xA;                                    "/>
            <element ident="ptr"
                     label="Link to Zotero record"
                     minOccurs="1"
                     maxOccurs="1"
                     errorMessage="&#xA;                                        Element must occur at least 1 time(s) and no more than 1 time(s).&#xA;                                    "/>
            <element ident="citedRange"
                     label="Referenced section(s)"
                     minOccurs="1"
                     maxOccurs="100"
                     errorMessage="&#xA;                                        Element must occur at least 1 time(s) and no more than 100 time(s).&#xA;                                    "/>
         </child>
      </childElements>
   </bibl>
   <title ident="title"
          elementName="title"
          elementLabel="Title of publication"
          path="/*:listBibl/*:bibl/*:title"
          currentLevel="3"
          popup="3"
          teiElement="&lt;title/&gt;">
      <lookup xmlns="http://www.w3.org/1999/xhtml"
              api="/exist/apps/majlis/api/search/title?format=xml&amp;q="
              formURL="form.xq?form=forms/msSimple/lookup/title.xhtml"
              elementName="title"
              formName="title"
              lookupLabel="Look up title"/>
      <popup xmlns="http://www.w3.org/1999/xhtml"
             formName="worksTEI"
             elementName="title"
             label="New Work"
             formURL="form.xq?form=forms/worksTEI/index.xhtml"/>
      <desc>contains a title for any kind of work.</desc>
      <availableAtts elementName="title"/>
      <childElements>
         <textNode type="input" class="title"/>
         <child/>
      </childElements>
   </title>
   <ptr ident="ptr"
        elementName="ptr"
        elementLabel="Link to Zotero record"
        path="/*:listBibl/*:bibl/*:ptr"
        currentLevel="3"
        popup="3"
        teiElement="&lt;ptr/&gt;">
      <desc>The link to the Zotero should be filled out automatically.</desc>
      <availableAtts elementName="ptr">
         <attDef ident="target" attLabel="Link">
            <gloss xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:rng="http://relaxng.org/ns/structure/1.0">Link</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <child/>
      </childElements>
   </ptr>
   <citedRange ident="citedRange"
               elementName="citedRange"
               elementLabel="Referenced section(s)"
               path="/*:listBibl/*:bibl/*:citedRange"
               currentLevel="3"
               popup="3"
               teiElement="&lt;citedRange/&gt;">
      <desc>defines the range of cited content, often represented by pages or other units</desc>
      <availableAtts elementName="citedRange">
         <attDef ident="unit" attLabel="Unit">
            <gloss xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:rng="http://relaxng.org/ns/structure/1.0">Unit</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type=""
                     mode="change">
               <valItem ident="page" attLabel="Pages"/>
               <valItem ident="folio" attLabel="Folios"/>
               <valItem ident="cols" attLabel="Columns"/>
               <valItem ident="section" attLabel="Sections"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="citedRange"/>
         <child/>
      </childElements>
   </citedRange>
</TEI>
