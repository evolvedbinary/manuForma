<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <list ident="list"
         elementName="list"
         elementLabel="List of incodicated documents"
         path="/*:list"
         currentLevel="1"
         popup="1"
         teiElement="&lt;list/&gt;">
      <desc>A sequence of bullet points ("item") organized as a list.</desc>
      <availableAtts elementName="list"/>
      <childElements>
         <child>
            <element ident="item"
                     label="Document"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </list>
   <item ident="item"
         elementName="item"
         elementLabel="Document"
         path="/*:list/*:item"
         currentLevel="2"
         popup="2"
         teiElement="&lt;item/&gt;">
      <desc>Describe the incodicated document.</desc>
      <availableAtts elementName="item"/>
      <childElements>
         <child>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="objectType"
                     label="Type of incodicated document"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="locus"
                     label="Folio"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="quote"
                     label="Transcription"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </item>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:list/*:item/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific elements and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <objectType ident="objectType"
               elementName="objectType"
               elementLabel="Type of incodicated document"
               path="/*:list/*:item/*:objectType"
               currentLevel="3"
               popup="3"
               teiElement="&lt;objectType/&gt;">
      <desc>Choose from the list.</desc>
      <availableAtts elementName="objectType"/>
      <controlledValues>
         <element xmlns="" ident="objectType">
            <valList type="closed">
               <valItem ident="Colophon"/>
               <valItem ident="Patronage"/>
               <valItem ident="Certificates of transmission"/>
               <valItem ident="Certificates of endowment"/>
               <valItem ident="Bequest statements"/>
               <valItem ident="Ownership statements"/>
               <valItem ident="Contract – Sale"/>
               <valItem ident="Contract – Donation"/>
               <valItem ident="Contract – Personal status"/>
               <valItem ident="Contract of employment of a scribe"/>
               <valItem ident="Ex libris"/>
               <valItem ident="Inventory"/>
               <valItem ident="Book list"/>
               <valItem ident="Family genealogy"/>
               <valItem ident="Note"/>
               <valItem ident="Proofreading note"/>
               <valItem ident="Ijāza"/>
               <valItem ident="Transmission note"/>
               <valItem ident="Reader’s formula"/>
               <valItem ident="Signatures"/>
               <valItem ident="Stamps"/>
               <valItem ident="Talismanic inscriptions"/>
               <valItem ident="Magic squares"/>
               <valItem ident="Magic letters"/>
               <valItem ident="Solomon seal"/>
               <valItem ident="Kabīkaj"/>
               <valItem ident="Geomantic figures"/>
               <valItem ident="Observations"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="input" class="objectType"/>
         <child/>
      </childElements>
   </objectType>
   <locus ident="locus"
          elementName="locus"
          elementLabel="Folio"
          path="/*:list/*:item/*:locus"
          currentLevel="3"
          popup="3"
          teiElement="&lt;locus/&gt;">
      <desc>Specify the location of a text or another feature within the
                            manuscript. The "target" field is used for single folio. The "from" and "to" fields are used together to describe a range
                            of folios.</desc>
      <availableAtts elementName="locus">
         <attDef ident="from" attLabel="From">
            <gloss xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:rng="http://relaxng.org/ns/structure/1.0">From</gloss>
         </attDef>
         <attDef ident="to" attLabel="To">
            <gloss xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:rng="http://relaxng.org/ns/structure/1.0">To</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="locus"/>
         <child/>
      </childElements>
   </locus>
   <quote ident="quote"
          elementName="quote"
          elementLabel="Transcription"
          path="/*:list/*:item/*:quote"
          currentLevel="3"
          popup="3"
          teiElement="&lt;quote/&gt;">
      <desc>Transcribe the incodicated document.</desc>
      <availableAtts elementName="quote">
         <attDef ident="xml:lang" attLabel="Language">
            <gloss xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:rng="http://relaxng.org/ns/structure/1.0">Language</gloss>
            <valList xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="ar"/>
               <valItem mode="add" ident="en"/>
               <valItem mode="add" ident="he"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="quote"/>
         <child/>
      </childElements>
   </quote>
</TEI>
