<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <binding ident="binding"
            elementName="binding"
            elementLabel="*Binding Description Container (2/2)"
            path="/*:binding"
            currentLevel="1"
            popup="1"
            teiElement="&lt;binding/&gt;">
      <desc>Description of the material, dimensions, and preservation
                            of the binding. Specify in the attribute if the binding is contemporary to the manuscript's production or not with the
                            values "true" or "false".</desc>
      <availableAtts elementName="binding">
         <attDef ident="contemporary" attLabel="contemporary">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="true"/>
               <valItem mode="add" ident="false"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="condition"
                     label="State of the binding"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="decoNote"
                     label="Detailed description of binding"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="origPlace"
                     label="Place of origin"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="origDate"
                     label="Date of origin"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </binding>
   <condition ident="condition"
              elementName="condition"
              elementLabel="State of the binding"
              path="/*:binding/*:condition"
              currentLevel="2"
              popup="2"
              teiElement="&lt;condition/&gt;">
      <desc>Describe the preservation, conservation and restoration
                            history; present state of fragment; damages. Choose from the list a generic description that fits best your overall
                            impression.</desc>
      <availableAtts elementName="condition">
         <attDef ident="key" attLabel="Description">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Description</gloss>
            <datatype xmlns:rng="http://relaxng.org/ns/structure/1.0"
                      xmlns:sch="http://purl.oclc.org/dsdl/schematron">
               <dataRef key="teidata.text"/>
            </datatype>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed">
               <valItem ident="deficient"/>
               <valItem ident="good"/>
               <valItem ident="intact"/>
               <valItem ident="other"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="condition"/>
         <child/>
      </childElements>
   </condition>
   <decoNote ident="decoNote"
             elementName="decoNote"
             elementLabel="Detailed description of binding"
             path="/*:binding/*:decoNote"
             currentLevel="2"
             popup="2"
             teiElement="&lt;decoNote/&gt;">
      <desc>Describe the manuscriptâ€™s decoration. Choose the "type"
                            from the list.</desc>
      <availableAtts elementName="decoNote">
         <attDef ident="type" attLabel="type">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed">
               <valItem ident="binding"> </valItem>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="objectType"
                     label="Binding type"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="material"
                     label="Binding material"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="dimensions"
                     label="Binding dimensions"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </decoNote>
   <objectType ident="objectType"
               elementName="objectType"
               elementLabel="Binding type"
               path="/*:binding/*:decoNote/*:objectType"
               currentLevel="3"
               popup="3"
               teiElement="&lt;objectType/&gt;">
      <desc>Choose from the list.</desc>
      <availableAtts elementName="objectType"/>
      <controlledValues>
         <element xmlns="" ident="objectType">
            <valList type="closed">
               <valItem ident="Unbound"/>
               <valItem ident="Original"/>
               <valItem ident="Later"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="input" class="objectType"/>
         <child/>
      </childElements>
   </objectType>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:binding/*:decoNote/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific elements and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <material ident="material"
             elementName="material"
             elementLabel="Binding material"
             path="/*:binding/*:decoNote/*:material"
             currentLevel="3"
             popup="3"
             teiElement="&lt;material/&gt;">
      <desc>Describe the writing material. Choose from the list what
                            kind of material is used in the manuscript/this codicological unit.</desc>
      <availableAtts elementName="material"/>
      <controlledValues>
         <element xmlns="" ident="material">
            <valList type="closed">
               <valItem ident="Wood"/>
               <valItem ident="Papyrus"/>
               <valItem ident="Cardboard"/>
               <valItem ident="Leather"/>
               <valItem ident="Metal"/>
               <valItem ident="Paper"/>
               <valItem ident="Textile"/>
               <valItem ident="Other"/>
               <valItem ident="Parchment"/>
               <valItem ident="Silk"/>
               <valItem ident="Stone"/>
               <valItem ident="Bronze"/>
               <valItem ident="Alabaster"/>
               <valItem ident="Cotton"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <child/>
      </childElements>
   </material>
   <dimensions ident="dimensions"
               elementName="dimensions"
               elementLabel="Binding dimensions"
               path="/*:binding/*:decoNote/*:dimensions"
               currentLevel="3"
               popup="3"
               teiElement="&lt;dimensions/&gt;">
      <desc>Measure the binding.</desc>
      <availableAtts elementName="dimensions">
         <attDef ident="type" attLabel="type">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="binding"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child/>
      </childElements>
   </dimensions>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:binding/*:p"
      currentLevel="2"
      popup="2"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific elements and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <origPlace ident="origPlace"
              elementName="origPlace"
              elementLabel="Place of origin"
              path="/*:binding/*:origPlace"
              currentLevel="2"
              popup="2"
              teiElement="&lt;origPlace/&gt;">
      <desc>Look up the place records in the database to specify a
                            settlement or town. Try different spellings in different languages! If no suitable record exists, create a new one. (The
                            "reference" field will be filled out automatically when you link a place record to this element.)</desc>
      <availableAtts elementName="origPlace">
         <attDef ident="ref" attLabel="Place identifier">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Place identifier</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="origPlace"/>
         <child/>
      </childElements>
   </origPlace>
   <origDate ident="origDate"
             elementName="origDate"
             elementLabel="Date of origin"
             path="/*:binding/*:origDate"
             currentLevel="2"
             popup="2"
             teiElement="&lt;origDate/&gt;">
      <desc>Fill in the date in the agreed-upon calendrical system.
                            Use the "when" field for precise values. In case the date can only be approximated, use the "not After "and "not Before"
                            fields together.</desc>
      <availableAtts elementName="origDate">
         <attDef ident="from" attLabel="From">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">From</gloss>
         </attDef>
         <attDef ident="to" attLabel="To">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">To</gloss>
         </attDef>
         <attDef ident="when" attLabel="When">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">When</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="origDate"/>
         <child/>
      </childElements>
   </origDate>
</TEI>
