<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <decoDesc ident="decoDesc"
             elementName="decoDesc"
             elementLabel="decoDesc"
             path="/*:decoDesc"
             currentLevel="1"
             popup="1"
             teiElement="&lt;decoDesc/&gt;">
      <availableAtts elementName="decoDesc"/>
      <childElements>
         <child>
            <element ident="summary"
                     label="Text layout summary"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="decoNote"
                     label="Text Layout"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </decoDesc>
   <summary ident="summary"
            elementName="summary"
            elementLabel="Text layout summary"
            path="/*:decoDesc/*:summary"
            currentLevel="2"
            popup="2"
            teiElement="&lt;summary/&gt;">
      <desc>Outline your observations of the text layout in general terms.</desc>
      <availableAtts elementName="summary"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </summary>
   <decoNote ident="decoNote"
             elementName="decoNote"
             elementLabel="Text Layout"
             path="/*:decoDesc/*:decoNote"
             currentLevel="2"
             popup="2"
             teiElement="&lt;decoNote/&gt;">
      <desc>Describe the text layout.</desc>
      <availableAtts elementName="decoNote"/>
      <childElements>
         <child>
            <element ident="desc"
                     label="Text layout description"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </decoNote>
   <desc ident="desc"
         elementName="desc"
         elementLabel="Text layout description"
         path="/*:decoDesc/*:decoNote/*:desc"
         currentLevel="3"
         popup="3"
         teiElement="&lt;desc/&gt;">
      <desc>Choose from the list those descriptions which match what you can see in the
                            manurscript.</desc>
      <availableAtts elementName="desc"/>
      <controlledValues>
         <element xmlns="" ident="desc">
            <valList type="closed">
               <valItem ident="No graphic marks of text navigation"/>
               <valItem ident="Spaces between paragraphs"/>
               <valItem ident="Paragraph marks and textual dividers"/>
               <valItem ident="Rubric"/>
               <valItem ident="Numbering of sections"/>
               <valItem ident="Enlarged titles and incipits"/>
               <valItem ident="Explicits"/>
               <valItem ident="Colours"/>
               <valItem ident="Other"/>
               <valItem ident="Change of script type"/>
               <valItem ident="Decoration"/>
               <valItem ident="Other"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </desc>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:decoDesc/*:decoNote/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific fields and form a coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
</TEI>
