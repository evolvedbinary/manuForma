              elementName="persName"
              formName="persName"
              lookupLabel="Look up persons"/>
      <popup xmlns="http://www.w3.org/1999/xhtml"
             formName="personTEI"
             elementName="persName"
             label="New Persons"
             formURL="form.xq?form=forms/personTEI/index.xhtml"/>
      <availableAtts elementName="persName"/>
      <childElements>
         <child>
            <element ident="forename" label="persName" minOccurs="0" maxOccurs="100"/>
            <element ident="surname" label="persName" minOccurs="0" maxOccurs="100"/>
            <element ident="addName" label="persName" minOccurs="0" maxOccurs="100"/>
         </child>
      </childElements>
   </persName>
