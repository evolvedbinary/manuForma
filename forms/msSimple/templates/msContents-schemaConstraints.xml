   <msContents ident="msContents"
               elementName="msContents"
               elementLabel="Add your content descriptions"
               minOccur="0"
               maxOccur="100"
               path="/*:msContents"
               currentLevel="1"
               popup="1"
               teiElement="&lt;msContents/&gt;">
      <availableAtts elementName="msContents"/>
      <childElements>
         <child>
            <element ident="summary"
                     label="Content summary"
                     minOccurs="0"
                     maxOccurs="100"/>
            <element ident="msItem" label="*Text unit" minOccurs="0" maxOccurs="100"/>
         </child>
      </childElements>
   </msContents>
   <summary ident="summary"
            elementName="summary"
            elementLabel="Content summary"
            minOccur="0"
            maxOccur="100"
            path="/*:msContents/*:summary"
            currentLevel="2"
            popup="2"
            teiElement="&lt;summary/&gt;">
      <desc>Add a short summary of contents in one sentence. There is space for a detailed description below.</desc>
      <availableAtts elementName="summary"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </summary>
   <msItem ident="msItem"
           elementName="msItem"
           elementLabel="*Text unit"
           minOccur="0"
           maxOccur="100"
           path="/*:msContents/*:msItem"
           currentLevel="2"
           popup="2"
           teiElement="&lt;msItem/&gt;">
      <desc>Describe the individual textual unit found in the manuscript or manuscript part.
                            Assign a "class"-attribute value from the list that best approximates the text's genre.</desc>
      <availableAtts elementName="msItem">
         <attDef ident="class" attLabel="class">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="bible"/>
               <valItem mode="add" ident="bibleCommentary"/>
               <valItem mode="add" ident="mishna"/>
               <valItem mode="add" ident="mishnaCommentary"/>
               <valItem mode="add" ident="talmud"/>
               <valItem mode="add" ident="talmudCommentary"/>
               <valItem mode="add" ident="halakha"/>
               <valItem mode="add" ident="midrash"/>
               <valItem mode="add" ident="liturgy"/>
               <valItem mode="add" ident="mysticism"/>
               <valItem mode="add" ident="philosophy"/>
               <valItem mode="add" ident="science"/>
               <valItem mode="add" ident="medicine"/>
               <valItem mode="add" ident="linguistics"/>
               <valItem mode="add" ident="bellesLettres"/>
               <valItem mode="add" ident="poetry"/>
               <valItem mode="add" ident="magic"/>
               <valItem mode="add" ident="targum"/>
               <valItem mode="add" ident="tafsir"/>
            </valList>
         </attDef>
         <attDef ident="xml:id" attLabel="id"/>
      </availableAtts>
      <childElements>
         <child>
            <element ident="locus" label="*Folios" minOccurs="0" maxOccurs="100"/>
            <element ident="title" label="*Title" minOccurs="0" maxOccurs="100"/>
            <element ident="author" label="Author" minOccurs="0" maxOccurs="100"/>
            <element ident="docDate"
                     label="Date of composition"
                     minOccurs="0"
                     maxOccurs="100"/>
            <element ident="textLang"
                     label="Text language"
                     minOccurs="0"
                     maxOccurs="100"/>
            <element ident="rubric" label="Rubric" minOccurs="0" maxOccurs="100"/>
            <element ident="incipit" label="Incipit" minOccurs="0" maxOccurs="100"/>
            <element ident="explicit" label="Explicit" minOccurs="0" maxOccurs="100"/>
            <element ident="finalRubric"
                     label="Final rubric"
                     minOccurs="0"
                     maxOccurs="100"/>
            <element ident="note" label="Note" minOccurs="0" maxOccurs="100"/>
         </child>
      </childElements>
   </msItem>
   <locus ident="locus"
          elementName="locus"
          elementLabel="*Folios"
          minOccur="0"
          maxOccur="100"
          path="/*:msContents/*:msItem/*:locus"
          currentLevel="3"
          popup="3"
          teiElement="&lt;locus/&gt;">
      <desc>The location of a text or another feature within the
                            manuscript. The "target" attribute is used for single folio. The "from" and "to" attributes are used together to describe
                            a range of folios.</desc>
      <availableAtts elementName="locus">
         <attDef ident="from" attLabel="from"/>
         <attDef ident="to" attLabel="to"/>
      </availableAtts>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </locus>
   <title ident="title"
          elementName="title"
          elementLabel="*Title"
          minOccur="0"
          maxOccur="100"
          path="/*:msContents/*:msItem/*:title"
          currentLevel="3"
          popup="3"
          teiElement="&lt;title/&gt;">
      <lookup xmlns="http://www.w3.org/1999/xhtml"
              api="/exist/apps/majlis/api/search/title?format=xml&amp;q="
              formURL="form.xq?form=forms/msSimple/lookup/title.xhtml"
              elementName="title"
              formName="title"
              lookupLabel="Look up title"/>
      <popup xmlns="http://www.w3.org/1999/xhtml"
             formName="worksTEI"
             elementName="title"
             label="New Work"
             formURL="form.xq?form=forms/worksTEI/index.xhtml"/>
      <availableAtts elementName="title">
         <attDef ident="ref" attLabel="ref"/>
         <attDef ident="xml:lang" attLabel="lang">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="ar"/>
               <valItem mode="add" ident="en"/>
               <valItem mode="add" ident="he"/>
               <valItem mode="add" ident="he-Latn"/>
               <valItem mode="add" ident="ar-Latn"/>
               <valItem mode="add" ident="ar-Hebr"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </title>
   <author ident="author"
           elementName="author"
           elementLabel="Author"
           minOccur="0"
           maxOccur="100"
           path="/*:msContents/*:msItem/*:author"
           currentLevel="3"
           popup="3"
           teiElement="&lt;author/&gt;">
      <desc>The author, editor, or compiler of a primary work. Look up the person records in
                            the database to specify an author. Try different spellings in different languages! If no suitable record exists, create a
                            new one. (The "ref" attribute will be filled out automatically when you link a person record to this element.)</desc>
      <availableAtts elementName="author">
         <attDef ident="ref" attLabel="ref"/>
      </availableAtts>
      <childElements>
         <child>
            <element ident="persName"
                     label="*Author name"
                     minOccurs="0"
                     maxOccurs="100"/>
         </child>
      </childElements>
   </author>
   <persName ident="persName"
             elementName="persName"
             elementLabel="*Author name"
             minOccur="0"
             maxOccur="100"
             path="/*:msContents/*:msItem/*:author/*:persName"
             currentLevel="4"
             popup="4"
             teiElement="&lt;persName/&gt;">
      <lookup xmlns="http://www.w3.org/1999/xhtml"
