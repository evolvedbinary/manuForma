          elementName="quote"
          elementLabel="Transcription"
          minOccur="0"
          maxOccur="100"
          path="/*:msContents/*:msItem/*:rubric/*:quote"
          currentLevel="4"
          popup="4"
          teiElement="&lt;quote/&gt;">
