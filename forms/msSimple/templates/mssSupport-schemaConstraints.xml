<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <supportDesc ident="supportDesc"
                elementName="supportDesc"
                elementLabel="Writing material description"
                path="/*:supportDesc"
                currentLevel="1"
                popup="1"
                teiElement="&lt;supportDesc/&gt;">
      <desc>Describe the writing material in detail using the appropriate fields.</desc>
      <availableAtts elementName="supportDesc"/>
      <childElements>
         <child>
            <element ident="support"
                     label="Information on writing material"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="extent"
                     label="Measurements of book block"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="foliation"
                     label="Foliation"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="collation"
                     label="Composition of quires"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="condition"
                     label="State of conservation"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </supportDesc>
   <support ident="support"
            elementName="support"
            elementLabel="Information on writing material"
            path="/*:supportDesc/*:support"
            currentLevel="2"
            popup="2"
            teiElement="&lt;support/&gt;">
      <desc>This element contains descriptions of the writing material in various child
                            elements.</desc>
      <availableAtts elementName="support"/>
      <childElements>
         <child>
            <element ident="objectType"
                     label="Codicological definition"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="material"
                     label="Writing material"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="watermark"
                     label="support"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="origPlace"
                     label="Place of origin"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="origDate"
                     label="Date of origin"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </support>
   <objectType ident="objectType"
               elementName="objectType"
               elementLabel="Codicological definition"
               path="/*:supportDesc/*:support/*:objectType"
               currentLevel="3"
               popup="3"
               teiElement="&lt;objectType/&gt;">
      <desc>Specify the type of manuscript (single / composite / multiple text), the format,
                            and the type of manuscript.</desc>
      <availableAtts elementName="objectType">
         <attDef ident="rend" attLabel="rend">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="square"> </valItem>
               <valItem mode="add" ident="horizontalRectangle"> </valItem>
               <valItem mode="add" ident="verticalRectangle"> </valItem>
               <valItem mode="add" ident="safina"> </valItem>
               <valItem mode="add" ident="irregular"> </valItem>
               <valItem mode="add" ident="other"> </valItem>
            </valList>
         </attDef>
         <attDef ident="style" attLabel="style">
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="codex"> </valItem>
               <valItem mode="add" ident="scroll"> </valItem>
               <valItem mode="add" ident="uncertain"> </valItem>
            </valList>
         </attDef>
      </availableAtts>
      <controlledValues>
         <element xmlns="" ident="objectType">
            <valList type="closed">
               <valItem ident="Single manuscript"/>
               <valItem ident="Composite manuscript"/>
               <valItem ident="Multiple text manuscript"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="input" class="objectType"/>
         <child/>
      </childElements>
   </objectType>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:supportDesc/*:support/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific fields and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <material ident="material"
             elementName="material"
             elementLabel="Writing material"
             path="/*:supportDesc/*:support/*:material"
             currentLevel="3"
             popup="3"
             teiElement="&lt;material/&gt;">
      <desc>Describe the writing material. Choose from the list
                            supplied what kind of material is used in the manuscript/this codicological unit.</desc>
      <availableAtts elementName="material"/>
      <controlledValues>
         <element xmlns="" ident="material">
            <valList type="closed">
               <valItem ident="Wood"/>
               <valItem ident="Papyrus"/>
               <valItem ident="Cardboard"/>
               <valItem ident="Leather"/>
               <valItem ident="Metal"/>
               <valItem ident="Paper"/>
               <valItem ident="Textile"/>
               <valItem ident="Other"/>
               <valItem ident="Parchment"/>
               <valItem ident="Silk"/>
               <valItem ident="Stone"/>
               <valItem ident="Bronze"/>
               <valItem ident="Alabaster"/>
               <valItem ident="Cotton"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="input" class="material"/>
         <child/>
      </childElements>
   </material>
   <watermark ident="watermark"
              elementName="watermark"
              elementLabel="watermark"
              path="/*:supportDesc/*:support/*:watermark"
              currentLevel="3"
              popup="3"
              teiElement="&lt;watermark/&gt;">
      <availableAtts elementName="watermark"/>
      <childElements>
         <child/>
      </childElements>
   </watermark>
   <origPlace ident="origPlace"
              elementName="origPlace"
              elementLabel="Place of origin"
              path="/*:supportDesc/*:support/*:origPlace"
              currentLevel="3"
              popup="3"
              teiElement="&lt;origPlace/&gt;">
      <desc>Look up the place records in the database to specify a
                            settlement or town. Try different spellings in different languages! If no suitable record exists, create a new one. (The
                            "reference" field will be filled out automatically when you link a place record to this element.)</desc>
      <availableAtts elementName="origPlace">
         <attDef ident="ref" attLabel="Place identifier">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Place identifier</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="origPlace"/>
         <child/>
      </childElements>
   </origPlace>
   <origDate ident="origDate"
             elementName="origDate"
             elementLabel="Date of origin"
             path="/*:supportDesc/*:support/*:origDate"
             currentLevel="3"
             popup="3"
             teiElement="&lt;origDate/&gt;">
      <desc>Fill in the date in the agreed-upon calendrical system.
                            Use the "when" field for precise values. In case the date can only be approximated, use the "not After "and "not Before"
                            fields together.</desc>
      <availableAtts elementName="origDate">
         <attDef ident="when" attLabel="When">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">When</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="origDate"/>
         <child/>
      </childElements>
   </origDate>
   <extent ident="extent"
           elementName="extent"
           elementLabel="Measurements of book block"
           path="/*:supportDesc/*:extent"
           currentLevel="2"
           popup="2"
           teiElement="&lt;extent/&gt;">
      <desc>Give the total number of folios for the call mark or manuscript part.</desc>
      <availableAtts elementName="extent"/>
      <childElements>
         <child>
            <element ident="measure"
                     label="Total number of folios"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="dimensions"
                     label="Dimensions of the page"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </extent>
   <measure ident="measure"
            elementName="measure"
            elementLabel="Total number of folios"
            path="/*:supportDesc/*:extent/*:measure"
            currentLevel="3"
            popup="3"
            teiElement="&lt;measure/&gt;">
      <desc>Specify how many folios does the manuscript/this codicological unit
                            contain?</desc>
      <availableAtts elementName="measure">
         <attDef ident="unit" attLabel="Unit">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Unit</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem mode="add" ident="leaf">
                  <desc xml:lang="en">used for leafs.</desc>
               </valItem>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="measure"/>
         <child/>
      </childElements>
   </measure>
   <dimensions ident="dimensions"
               elementName="dimensions"
               elementLabel="Dimensions of the page"
               path="/*:supportDesc/*:extent/*:dimensions"
               currentLevel="3"
               popup="3"
               teiElement="&lt;dimensions/&gt;">
      <desc>Measure the leaves.</desc>
      <availableAtts elementName="dimensions">
         <attDef ident="type" attLabel="type">
            <datatype xmlns:rng="http://relaxng.org/ns/structure/1.0"
                      xmlns:sch="http://purl.oclc.org/dsdl/schematron">
               <dataRef key="teidata.enumerated"/>
            </datatype>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron">
               <valItem ident="leaves"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="height"
                     label="Height of writing material"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="width"
                     label="Width of writing material"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </dimensions>
   <height ident="height"
           elementName="height"
           elementLabel="Height of writing material"
           path="/*:supportDesc/*:extent/*:dimensions/*:height"
           currentLevel="4"
           popup="4"
           teiElement="&lt;height/&gt;">
      <desc>Measure the height with a precision of 5 millimeters.</desc>
      <availableAtts elementName="height"/>
      <childElements>
         <textNode type="input" class="height"/>
         <child/>
      </childElements>
   </height>
   <width ident="width"
          elementName="width"
          elementLabel="Width of writing material"
          path="/*:supportDesc/*:extent/*:dimensions/*:width"
          currentLevel="4"
          popup="4"
          teiElement="&lt;width/&gt;">
      <desc>Measure the width with a precision of 5 millimeters.</desc>
      <availableAtts elementName="width"/>
      <childElements>
         <textNode type="input" class="width"/>
         <child/>
      </childElements>
   </width>
   <foliation ident="foliation"
              elementName="foliation"
              elementLabel="Foliation"
              path="/*:supportDesc/*:foliation"
              currentLevel="2"
              popup="2"
              teiElement="&lt;foliation/&gt;">
      <desc>Describe how the folios or pages in the manuscript are
                            numbered (Arabic numerals, Hebrew letters etc.), if there are multiple such devices and their range.</desc>
      <availableAtts elementName="foliation">
         <attDef ident="rendition" attLabel="Original or modern?">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Original or modern?</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed">
               <valItem ident="original"/>
               <valItem ident="modern"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="foliation"/>
         <child/>
      </childElements>
   </foliation>
   <collation ident="collation"
              elementName="collation"
              elementLabel="Composition of quires"
              path="/*:supportDesc/*:collation"
              currentLevel="2"
              popup="2"
              teiElement="&lt;collation/&gt;">
      <desc>Describe the preservation, conservation and restoration
                            history; present state of fragment; damages; record whether the manuscript has become less readable. Choose from the list
                            supplied for the descriptor field a generic description that best fits your overall impression.</desc>
      <availableAtts elementName="collation"/>
      <childElements>
         <child>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="formula"
                     label="Quire formula"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="catchwords"
                     label="Catchwords"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="unit"
                     label="collation"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </collation>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:supportDesc/*:collation/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific fields and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <formula ident="formula"
            elementName="formula"
            elementLabel="Quire formula"
            path="/*:supportDesc/*:collation/*:formula"
            currentLevel="3"
            popup="3"
            teiElement="&lt;formula/&gt;">
      <desc>Describe the manuscript's quiring using some formalized system. (Differentiate
                            between quaternions, quinions, etc. and provide the number and position of extant (bi)folios within the quire.) You can
                            link to an external platform that describes the quire structure visually using the reference field.</desc>
      <availableAtts elementName="formula">
         <attDef ident="ref" attLabel="ref"/>
      </availableAtts>
      <childElements>
         <textNode type="input" class="formula"/>
         <child/>
      </childElements>
   </formula>
   <catchwords ident="catchwords"
               elementName="catchwords"
               elementLabel="Catchwords"
               path="/*:supportDesc/*:collation/*:catchwords"
               currentLevel="3"
               popup="3"
               teiElement="&lt;catchwords/&gt;">
      <desc>Describe how the correct ordering of the quires is
                            ensured in the manuscript.</desc>
      <availableAtts elementName="catchwords"/>
      <controlledValues>
         <element xmlns="" ident="catchwords">
            <valList type="closed">
               <valItem ident="No marking "/>
               <valItem ident="Catchwords at the end of quires, "/>
               <valItem ident="Catchwords at the end of folios, "/>
               <valItem ident="Catchwords at the end of pages, "/>
               <valItem ident="Middle markings, "/>
               <valItem ident="Signatures at the end of quires, "/>
               <valItem ident="Signatures at the beginning of quires, "/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <textNode type="input" class="catchwords"/>
         <child/>
      </childElements>
   </catchwords>
   <unit ident="unit"
         elementName="unit"
         elementLabel="unit"
         path="/*:supportDesc/*:collation/*:unit"
         currentLevel="3"
         popup="3"
         teiElement="&lt;unit/&gt;">
      <availableAtts elementName="unit"/>
      <childElements>
         <child/>
      </childElements>
   </unit>
   <condition ident="condition"
              elementName="condition"
              elementLabel="State of conservation"
              path="/*:supportDesc/*:condition"
              currentLevel="2"
              popup="2"
              teiElement="&lt;condition/&gt;">
      <desc>Describe the preservation, conservation and restoration
                            history; present state of fragment; damages; record whether the manuscript has become less readable. Choose from the list
                            supplied for the descriptor field a generic description that best fits your overall impression.</desc>
      <availableAtts elementName="condition">
         <attDef ident="key" attLabel="Descriptor">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Descriptor</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed">
               <valItem ident="complete"/>
               <valItem ident="partOfCodex"/>
               <valItem ident="fragment"/>
               <valItem ident="unidentified"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="p"
                     label="Free text box"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="ab"
                     label="State of writing"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </condition>
   <p ident="p"
      elementName="p"
      elementLabel="Free text box"
      path="/*:supportDesc/*:condition/*:p"
      currentLevel="3"
      popup="3"
      teiElement="&lt;p/&gt;">
      <desc>Enter prose text to connect the fields dedicated to specific fields and form a
                            coherent descriptive text.</desc>
      <availableAtts elementName="p"/>
      <childElements>
         <textNode type="textarea"/>
         <child/>
      </childElements>
   </p>
   <ab ident="ab"
       elementName="ab"
       elementLabel="State of writing"
       path="/*:supportDesc/*:condition/*:ab"
       currentLevel="3"
       popup="3"
       teiElement="&lt;ab/&gt;">
      <desc>Describe the ink and so forth.</desc>
      <availableAtts elementName="ab">
         <attDef ident="rend" attLabel="Characterization">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Characterization</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     mode="change">
               <valItem mode="add" ident="visible"/>
               <valItem mode="add" ident="illegible"/>
               <valItem mode="add" ident="erased"/>
            </valList>
         </attDef>
         <attDef ident="type" attLabel="Type">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Type</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     mode="change">
               <valItem mode="add" ident="writing"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <textNode type="input" class="ab"/>
         <child/>
      </childElements>
   </ab>
</TEI>
