<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <physDesc ident="physDesc"
             elementName="physDesc"
             elementLabel="physDesc"
             minOccur=""
             maxOccur=""
             path="/*:physDesc"
             currentLevel="1"
             popup="1"
             teiElement="&lt;physDesc/&gt;">
      <availableAtts elementName="physDesc"/>
      <childElements>
         <child>
            <element ident="objectDesc" label="Choose the type of manuscript"/>
         </child>
      </childElements>
   </physDesc>
   <objectDesc ident="objectDesc"
               elementName="objectDesc"
               elementLabel="Choose the type of manuscript"
               minOccur=""
               maxOccur=""
               path="/*:physDesc/*:objectDesc"
               currentLevel="2"
               popup="2"
               teiElement="&lt;objectDesc/&gt;">
      <desc>Contains descriptions of the manuscript's physical components. Use the "form"
                            attribute to indicate if the manuscript was created as a single unit, a composite, or a multiple text manuscript.</desc>
      <availableAtts elementName="objectDesc">
         <attDef xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 ident="form"
                 mode="change">
            <valList type="closed" mode="change">
               <valItem mode="add" ident="single">
                  <desc xml:lang="en">Single manuscript: a volume consisting of one codicological unit and containing only one
                                            text</desc>
               </valItem>
               <valItem mode="add" ident="composite">
                  <desc xml:lang="en">Composite manuscript: a volume assembled from initially separate codicological units or
                                            booklets</desc>
               </valItem>
               <valItem mode="add" ident="multiple">
                  <desc xml:lang="en">Multiple text manuscript: a volume consisting of one codicological unit with several texts
                                            worked in a single operation by one or several scribes</desc>
               </valItem>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child/>
      </childElements>
   </objectDesc>
</TEI>
