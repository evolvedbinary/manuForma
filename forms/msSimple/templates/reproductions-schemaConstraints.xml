<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <facsimile ident="facsimile"
              elementName="facsimile"
              elementLabel="Reproductions"
              path="/*:facsimile"
              currentLevel="1"
              popup="1"
              teiElement="&lt;facsimile/&gt;">
      <desc>Add information where reproductions of the manuscript can be found.</desc>
      <availableAtts elementName="facsimile"/>
      <childElements>
         <child>
            <element ident="graphic"
                     label="Reproduction link"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </facsimile>
   <graphic ident="graphic"
            elementName="graphic"
            elementLabel="Reproduction link"
            path="/*:facsimile/*:graphic"
            currentLevel="2"
            popup="2"
            teiElement="&lt;graphic/&gt;">
      <desc>Add the link to one reproduction in the "Source of of reproduction' field. Select
                            the type from the dropdown list.</desc>
      <availableAtts elementName="graphic">
         <attDef attLabel="Source of reproduction"
                 ident="source"
                 mode="replace"
                 usage="opt">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Source of reproduction</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem ident="Ktiv" attLabel="Ktiv"/>
               <valItem ident="holdingInstitution" attLabel="Holding institution"/>
            </valList>
         </attDef>
         <attDef attLabel="Reproduction type"
                 ident="type"
                 mode="replace"
                 usage="opt">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Reproduction type</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="closed"
                     mode="change">
               <valItem ident="microfilm" attLabel="Microfilm"/>
               <valItem ident="microfiche" attLabel="Microfiche"/>
               <valItem ident="photostat" attLabel="Photostat"/>
               <valItem ident="digitalImageOffline" attLabel="Digital image offline"/>
               <valItem ident="digitalImageOnline" attLabel="Digital image online"/>
            </valList>
         </attDef>
         <attDef attLabel="URL" ident="url" mode="change">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">URL</gloss>
         </attDef>
      </availableAtts>
      <childElements>
         <child/>
      </childElements>
   </graphic>
</TEI>
