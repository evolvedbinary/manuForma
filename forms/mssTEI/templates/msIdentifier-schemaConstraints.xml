<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xmlns:sc="http://www.ascc.net/xml/schematron" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:tei="http://www.tei-c.org/ns/1.0" xmlns:srophe="https://srophe.app" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:local="http://syriaca.org/ns">
   <msIdentifier ident="msIdentifier" elementName="msIdentifier" elementLabel="msIdentifier" minOccur="" maxOccur="" path="/*:msIdentifier" currentLevel="1" popup="1">
      <desc>This section contains all the call marks, names, and
                            other information to identify the manuscript.</desc>
      <availableAtts elementName="msIdentifier"/>
      <childElements>
         <child>
            <element ident="institution"/>
            <element ident="repository"/>
            <element ident="collection"/>
            <element ident="idno"/>
            <element ident="msName"/>
            <element ident="altIdentifier"/>
            <element ident="objectName"/>
            <element ident="country"/>
            <element ident="settlement"/>
         </child>
      </childElements>
   </msIdentifier>
   <institution ident="institution" elementName="institution" elementLabel="institution" minOccur="" maxOccur="" path="/*:msIdentifier/*:institution" currentLevel="2" popup="2">
      <desc>The name of a library which holds the manuscript.</desc>
      <availableAtts elementName="institution"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </institution>
   <repository ident="repository" elementName="repository" elementLabel="repository" minOccur="" maxOccur="" path="/*:msIdentifier/*:repository" currentLevel="2" popup="2">
      <desc>The name of a repository within which the manuscript is
                            stored, possibly part of a library.</desc>
      <availableAtts elementName="repository"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </repository>
   <collection ident="collection" elementName="collection" elementLabel="collection" minOccur="" maxOccur="" path="/*:msIdentifier/*:collection" currentLevel="2" popup="2">
      <availableAtts elementName="collection"/>
      <childElements>
         <child/>
      </childElements>
   </collection>
   <idno ident="idno" elementName="idno" elementLabel="idno" minOccur="" maxOccur="" path="/*:msIdentifier/*:idno" currentLevel="2" popup="2">
      <desc>The call mark of a manuscript, used within the holding institution or by external
                            authorities who provide alternate identifiers.</desc>
      <availableAtts elementName="idno"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </idno>
   <msName ident="msName" elementName="msName" elementLabel="msName" minOccur="" maxOccur="" path="/*:msIdentifier/*:msName" currentLevel="2" popup="2">
      <desc>Nicknames and epithets used for the manuscript by scholars (e.g. "Machsor
                            Lipsiae").</desc>
      <availableAtts elementName="msName"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </msName>
   <altIdentifier ident="altIdentifier" elementName="altIdentifier" elementLabel="altIdentifier" minOccur="" maxOccur="" path="/*:msIdentifier/*:altIdentifier" currentLevel="2" popup="2">
      <desc>Alternate Identifiers. This can be older shelf marks and identifiers in databases
                            like IMHM, SfarData and Ktiv. Specify where this identifier is used in the "type" attribute.</desc>
      <availableAtts elementName="altIdentifier">
         <attDef xmlns:sch="http://purl.oclc.org/dsdl/schematron" xmlns:rng="http://relaxng.org/ns/structure/1.0" ident="type" mode="change">
                                <valList type="closed" mode="change">
                                    <valItem mode="add" ident="IMHM"/>
                                    <valItem mode="add" ident="SfarData"/>
                                    <valItem mode="add" ident="Ktiv"/>
                                </valList>
                            </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="idno"/>
            <element ident="note"/>
         </child>
      </childElements>
   </altIdentifier>
   <idno ident="idno" elementName="idno" elementLabel="idno" minOccur="" maxOccur="" path="/*:msIdentifier/*:altIdentifier/*:idno" currentLevel="3" popup="3">
      <desc>The call mark of a manuscript, used within the holding institution or by external
                            authorities who provide alternate identifiers.</desc>
      <availableAtts elementName="idno"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </idno>
   <note ident="note" elementName="note" elementLabel="note" minOccur="" maxOccur="" path="/*:msIdentifier/*:altIdentifier/*:note" currentLevel="3" popup="3">
      <availableAtts elementName="note"/>
      <childElements>
         <child/>
      </childElements>
   </note>
   <objectName ident="objectName" elementName="objectName" elementLabel="objectName" minOccur="" maxOccur="" path="/*:msIdentifier/*:objectName" currentLevel="2" popup="2">
      <availableAtts elementName="objectName"/>
      <childElements>
         <child/>
      </childElements>
   </objectName>
   <country ident="country" elementName="country" elementLabel="country" minOccur="" maxOccur="" path="/*:msIdentifier/*:country" currentLevel="2" popup="2">
      <desc>Specify the country where the holding institution is situated.</desc>
      <availableAtts elementName="country"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </country>
   <settlement ident="settlement" elementName="settlement" elementLabel="settlement" minOccur="" maxOccur="" path="/*:msIdentifier/*:settlement" currentLevel="2" popup="2">
      <desc>The city or town where the holding institution is based.</desc>
      <availableAtts elementName="settlement"/>
      <childElements>
         <textNode type="input"/>
         <child/>
      </childElements>
   </settlement>
</TEI>