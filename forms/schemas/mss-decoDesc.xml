    <text>
        <front>
            <divGen type="toc"/>
        </front>
        <body>
            <div>
                <head>Information on this customization</head>
                <p>Schema for MAJLIS Project. This part of the schema is used for entering descriptions of the manuscript support using XForms.</p>
                <p>Built on the <ref target="https://betamasaheft.eu/Guidelines">Beta maṣāḥǝft Guidelines</ref> contain examples and details of that
                    customization.</p>
                <p>Added Rules from the <ref target="https://github.com/msDesc/consolidated-tei-schema/blob/master/msdesc.odd">consolidated
                        schema</ref> of FIRHIST</p>
                <p>Constrained this schema for generating forms.</p>
            </div>
            <div>
                <schemaSpec ident="mss-decoDesc" docLang="en" prefix="tei_" start="TEI" xml:lang="en" targetLang="en">
                    <!--source="mss-compiled.odd"-->
                    <!--       MODULES USED BY THE SCHEMA
                the @source ties the current schema to the pre-compiled Arabic Manuscripts Schema, which is tied to version 4.2.0 of TEI
                -->


                    <moduleRef key="msdescription" include="decoDesc decoNote summary"/>
                    
                    <elementSpec ident="decoDesc" mode="change">
                        <gloss>*Text Layout Container &lt;decoDesc/&gt;</gloss>
                        <desc versionDate="2022-05-26" xml:lang="en">Note your observations about graphic marks, spaces between paragraphs and other markers that structure the text in one of the fields below.</desc>
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.global.rendition" mode="delete"/>
                            <memberOf key="att.global.linking" mode="delete"/>
                            <memberOf key="att.global.analytic" mode="delete"/>
                            <memberOf key="att.global.facs" mode="delete"/>
                            <memberOf key="att.global.change" mode="delete"/>
                            <memberOf key="att.global.responsibility" mode="delete"/>
                            <memberOf key="att.global.source" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="summary"/>
                            <elementRef key="decoNote"/>
                        </content>
                    </elementSpec>
                    
                    <elementSpec ident="decoNote" mode="change">
                        <gloss>Text Layout Note &lt;decoNote/&gt;</gloss>
                        <desc versionDate="2022-05-26" xml:lang="en">Describe graphic marks, spaces between paragraphs and other markers that structure the text. Choose the appropriate attribute for the @type field from the list.</desc>
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.global.rendition" mode="delete"/>
                            <memberOf key="att.global.linking" mode="delete"/>
                            <memberOf key="att.global.analytic" mode="delete"/>
                            <memberOf key="att.global.facs" mode="delete"/>
                            <memberOf key="att.global.change" mode="delete"/>
                            <memberOf key="att.global.responsibility" mode="delete"/>
                            <memberOf key="att.global.source" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="type" mode="change">
                                <valList type="closed" mode="change">
                                    <valItem mode="add" ident="noGraphicMarksOfTextNavigation"/>
                                    <valItem mode="add" ident="spaceBetweenParagraphs"/>
                                    <valItem mode="add" ident="rubric"/>
                                    <valItem mode="add" ident="secitonNumbering"/>
                                    <valItem mode="add" ident="EnlargedTitlesIncipits"/>
                                    <valItem mode="add" ident="explicits"/>
                                    <valItem mode="add" ident="colors"/>
                                    <valItem mode="add" ident="changeScriptRegister"/>
                                    <valItem mode="add" ident="changeScriptType"/>
                                    <valItem mode="add" ident="Decoration"/>
                                    <valItem mode="add" ident="other"/>
                                </valList>
                            </attDef>
                        </attList>
                    </elementSpec>
                    
                    <elementSpec ident="summary" mode="change">
                        <gloss>Text Layout Summary &lt;summary/&gt;</gloss>
                        <desc versionDate="2022-05-26" xml:lang="en">Make a blanket statement about the text's layout.</desc>
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.global.rendition" mode="delete"/>
                            <memberOf key="att.global.linking" mode="delete"/>
                            <memberOf key="att.global.analytic" mode="delete"/>
                            <memberOf key="att.global.facs" mode="delete"/>
                            <memberOf key="att.global.change" mode="delete"/>
                            <memberOf key="att.global.responsibility" mode="delete"/>
                            <memberOf key="att.global.source" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                    </elementSpec>
                    
                </schemaSpec>
            </div>
        </body>
    </text>
