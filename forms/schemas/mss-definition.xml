    <text>
        <front>
            <divGen type="toc"/>
        </front>
        <body>
            <div>
                <head>Information on this customization</head>
                <p>Schema for MAJLIS Project. This part of the schema is used for entering descriptions of the manuscript support using XForms.</p>
                <p>Built on the <ref target="https://betamasaheft.eu/Guidelines">Beta maṣāḥǝft Guidelines</ref> contain examples and details of that
                    customization.</p>
                <p>Added Rules from the <ref target="https://github.com/msDesc/consolidated-tei-schema/blob/master/msdesc.odd">consolidated
                        schema</ref> of FIRHIST</p>
                <p>Constrained this schema for generating forms.</p>
            </div>
            <div>
                <schemaSpec ident="mss-definition" docLang="en" prefix="tei_" start="TEI" xml:lang="en" targetLang="en">
                    <!--source="mss-compiled.odd"-->
                    <!--       MODULES USED BY THE SCHEMA
                the @source ties the current schema to the pre-compiled Arabic Manuscripts Schema, which is tied to version 4.2.0 of TEI
                -->

                    <moduleRef key="core"
                        except="list abbr add biblScope binaryObject ellipsis emph expan foreign gap graphic imprint item measureGrp note noteGrp orig teiCorpus textLang addrLine address analytic author bibl biblStruct cb choice cit citedRange corr date del desc distinct divGen editor email gb gloss head headItem headLabel hi index l label lb lg listBibl media meeting mentioned milestone monogr name num pb postBox postCode ptr pubPlace publisher q quote rb ref reg relatedItem resp respStmt rs rt ruby said series sic soCalled sp speaker stage street term time title unclear unit"/>
                    <moduleRef key="msdescription"
                        include="catchwords collation condition depth dimensions foliation height locus material objectDesc origDate origPlace"/>
                    <moduleRef key="tei"/>
                    <elementSpec ident="note" module="core" mode="delete"/>
                    <elementSpec ident="locus" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="locusGrp" module="msdescription" mode="delete"/>
                    <elementSpec ident="msFrag" module="msdescription" mode="delete"/>
                    <elementSpec ident="TEI" module="textstructure" mode="delete"/>
                    <elementSpec ident="msDesc" module="msdescription" mode="delete"/>
                    <elementSpec ident="catchwords" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="collation" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="condition" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="dim" module="msdescription" mode="delete"/>
                    <elementSpec ident="foliation" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="material" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="objectDesc" module="msdescription" mode="delete">
                        <gloss>Choose the Type of Manuscript &lt;objectDesc&gt;</gloss>
                        <desc versionDate="2022-05-27" xml:lang="en">Contains descriptions of the manuscript's physical components. Use the "form"
                            attribute to indicate if the manuscript was created as a single unit, a composite, or a multiple text manuscript.</desc>
                        <attList>
                            <attDef ident="ana" mode="delete"/>
                            <attDef ident="cert" mode="delete"/>
                            <attDef ident="change" mode="delete"/>
                            <attDef ident="copyOf" mode="delete"/>
                            <attDef ident="corresp" mode="delete"/>
                            <attDef ident="exclude" mode="delete"/>
                            <attDef ident="facs" mode="delete"/>
                            <attDef ident="form" mode="change">
                                <valList type="closed" mode="change">
                                    <valItem mode="add" ident="single">
                                        <desc xml:lang="en">used for Single manuscript</desc>
                                    </valItem>
                                    <valItem mode="add" ident="composite">
                                        <desc xml:lang="en">used for Composite manuscript</desc>
                                    </valItem>
                                    <valItem mode="add" ident="multiple">
                                        <desc xml:lang="en">used for multiple text manuscript</desc>
                                    </valItem>
                                </valList>
                            </attDef>
                            <attDef ident="n" mode="delete"/>
                            <attDef ident="next" mode="delete"/>
                            <attDef ident="prev" mode="delete"/>
                            <attDef ident="rend" mode="delete"/>
                            <attDef ident="rendition" mode="delete"/>
                            <attDef ident="resp" mode="delete"/>
                            <attDef ident="sameAs" mode="delete"/>
                            <attDef ident="select" mode="delete"/>
                            <attDef ident="source" mode="delete"/>
                            <attDef ident="style" mode="delete"/>
                            <attDef ident="synch" mode="delete"/>
                            <attDef ident="xml:base" mode="delete"/>
                            <attDef ident="xml:id" mode="delete"/>
                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="origDate" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="origPlace" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="physDesc" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="watermark" module="msdescription" mode="delete"/>
                    <elementSpec ident="p" module="core" mode="delete"> </elementSpec>
                    <elementSpec ident="depth" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="height" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="width" module="msdescription" mode="delete"> </elementSpec>
                    <elementSpec ident="item" module="core" mode="delete"/>
                    <elementSpec ident="list" module="core" mode="delete"/>
                    <elementSpec ident="measure" module="core" mode="delete"> </elementSpec>
                    <moduleRef key="header" include="extent"/>
                    <moduleRef key="figures" include="formula"/>
                    <elementSpec ident="dimensions" mode="delete"> </elementSpec>
                    <elementSpec ident="supportDesc" mode="delete"> </elementSpec>
                    <elementSpec ident="support" mode="delete"> </elementSpec>
                    <elementSpec ident="extent" mode="delete"> </elementSpec>
                    <elementSpec ident="formula" mode="delete"> </elementSpec>
                </schemaSpec>
            </div>
        </body>
    </text>
</TEI>
